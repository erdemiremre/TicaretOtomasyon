@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>SatisYap</h2>
<br />
<form class="form-group" method="post">
    @*@Html.HiddenFor(x=>x.Satisid)*@
    @Html.LabelFor(x => x.Urun)
    <input type="text" name="Urunid" value=" @ViewBag.dgr1" class="form-control" readonly />
    <br />
    @Html.Label("Cari")
    @Html.TextBoxFor(x => x.Cariid, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Adet)
    <input type="number" id="adet" name="Adet" class="form-control" max="10" min="1" placeholder="adet girin.." onchange="sum();" />
    <br />
    @Html.LabelFor(x => x.Fiyat)
    <input type="text" id="fiyat" name="Fiyat" value=" @ViewBag.dgr2" class="form-control" onchange="sum();" />
    <br />
    @Html.LabelFor(x => x.Toplam)
    <input type="text" id="toplam" name="Toplam" class="form-control" readonly />
    <br />
    <button class="btn btn-info" >Satış Yap</button>
</form>
<br />

<script>
    function sum() {
        var sayi1 = document.getElementById('adet').value;
        var sayi2 = document.getElementById('fiyat').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(sonuc)) {
            document.getElementById('toplam').value = sonuc;
        }
    }


</script>
